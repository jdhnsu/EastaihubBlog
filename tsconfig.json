{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": ["@cloudflare/workers-types", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  },
  "include": ["src/**/*", "scripts/**/*"]
}
